{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "aws_region": "",
    "aws_profile": "",
    "appname": "",
    "appenv": "",
    "hosted_zone": "",
    "hosted_zone_id": "",
    "admin_email": "",
    "subnet_id": "",
    "region": "us-east-1",
    "source_ami": "ami-00068cd7555f543d5",
    "instance_type": "t2.micro",
    "ami_name": "amazonlinux2-base",
    "ssh_username": "ec2-user",
    "ssh_keypair_name": "mykey",
    "ssh_private_key_file": "~/.ssh/mykey.pem"
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key_id`}}",
    "secret_key": "{{user `aws_secret_access_key`}}",
    "region": "{{user `aws_region`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "{{user `ssh_username`}}",
    "ssh_keypair_name" : "{{user `ssh_keypair_name`}}",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
    "communicator": "ssh",
    "force_deregister": "true",
    "force_delete_snapshot": "true",
    "ami_block_device_mappings": [{
      "device_name": "/dev/xvda",
      "volume_size": 10,
      "delete_on_termination": true,
      "volume_type": "gp2"
    }],
    "vpc_id": "{{user `vpc_id`}}",
    "associate_public_ip_address": true,
    "subnet_id": "{{user `subnet_id`}}",
    "ami_name": "{{user `ami_name`}}",
    "source_ami": "{{user `source_ami`}}",
    "run_tags": {
      "Name": "packer-{{user `ami_name`}}"
    }
  }],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'",
      "inline": [
        "yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm",
        "yum -y update",
        "yum repolist",
        "yum install -y python-pip",
        "pip install ansible",
        "yum -y upgrade"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible",
      "extra_arguments": [ "--extra-vars \"aws_access_key_id={{user `aws_access_key_id`}} aws_secret_access_key={{user `aws_secret_access_key`}} aws_region={{user `aws_region`}} aws_profile={{user `aws_profile`}} appname={{user `appname`}} appenv={{user `appenv`}} hosted_zone={{user `hosted_zone`}} hosted_zone_id={{user `hosted_zone_id`}} admin_email={{user `admin_email`}}\"" ]
    }
  ],

  "post-processors": [
    [{
        "output": "packer/manifest.json",
        "strip_path": true,
        "type": "manifest"
    }]
  ]
}
