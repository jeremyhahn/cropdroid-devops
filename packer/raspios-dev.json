{
  "variables": {
    "cropdroid_binary": "cropdroid-standalone-arm"
  },
  "builders": [
    {
      "name": "raspios-standalone-dev",
      "type": "arm-image",
      "iso_url": "https://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2020-02-14/2020-02-13-raspbian-buster-lite.zip",
      "iso_checksum_type": "sha256",
      "iso_checksum": "12ae6e17bf95b6ba83beca61e7394e7411b45eba7e6a520f434b0748ea7370e8",
      "target_image_size": 4294967296
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get install -y vim ssh ntp ansible golang git",
        "apt-get install -y raspberrypi-ui-mods rpi-chromium-mods"
      ]
    }, {
      "type": "file",
      "source": "ansible/roles/cropdroid/files/{{user `cropdroid_binary` }}",
      "destination": "/usr/local/bin/cropdroid"
    }
  ]
}
