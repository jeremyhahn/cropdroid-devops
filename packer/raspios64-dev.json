{
  "variables": {
      "home": "{{env `HOME`}}",
      "artifacts": "{{env `HOME`}}/sources/go-cropdroid/extra/dist/arm64",
      "cropdroid_binary_type": "standalone",
      "image_name": "2020-05-27-raspios-buster-arm64-dev"
  },
  "builders": [
    {
      "name": "2020-05-27-raspios-buster-arm64-dev",
      "type": "arm-image",
      "qemu_binary": "qemu-aarch64-static",
      "image_type": "raspberrypi",
      "iso_url": "https://downloads.raspberrypi.org/raspios_arm64/images/raspios_arm64-2020-05-28/2020-05-27-raspios-buster-arm64.zip",
      "iso_checksum_type": "sha256",
      "iso_checksum": "d06d8eecfa3980e18f9061777ca2dac50d98037373e1bd04e8726d79467dc7c7",
      "target_image_size": 16000000000
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get install -y vim ssh git wget curl python-pip",
        "apt-get install -y raspberrypi-ui-mods rpi-chromium-mods",
        "pip install ansible",
        "apt install python-argcomplete"
      ]
    }, {
      "type": "shell",
      "inline": "mkdir {{user `home`}}/.ssh"
    }, {
      "type": "file",
      "source": "{{user `home`}}/.ssh/id_rsa.pub",
      "destination": "/home/pi/.ssh/authorized_keys"
    }, {
      "type": "shell",
      "script": "scripts/build-dev.sh"
    }, {
      "type": "shell",
      "inline": ["touch /boot/ssh"]
    }
  ],
  "post-processors": [
    [{
        "output": "packer/manifest.json",
        "strip_path": true,
        "type": "manifest"
    }]
  ]
}