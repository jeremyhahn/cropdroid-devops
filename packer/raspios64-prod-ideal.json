{
  "variables": {
      "home": "{{env `HOME`}}"
  },
  "builders": [
    {
      "name": "2020-05-27-raspios-buster-arm64-prod",
      "type": "arm-image",
      "qemu_binary": "qemu-system-arm",
      "image_type": "raspberrypi",
      "iso_url": "https://downloads.raspberrypi.org/raspios_arm64/images/raspios_arm64-2020-05-28/2020-05-27-raspios-buster-arm64.zip",
      "iso_checksum_type": "sha256",
      "iso_checksum": "d06d8eecfa3980e18f9061777ca2dac50d98037373e1bd04e8726d79467dc7c7",
      "target_image_size": 16000000000
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get upgrade -y",
        "apt-get install -y vim ssh git wget curl python-pip",
        "apt-get install -y raspberrypi-ui-mods rpi-chromium-mods",
        "pip install ansible",
        "apt install python-argcomplete",
        "pip install awscli"
      ]
    }, {
      "type": "file",
      "source": "{{user `home`}}/.aws/credentials",
      "destination": "/root/.aws/credentials"
    }, {
      "type": "file",
      "source": "{{user `home`}}/.aws/credentials",
      "destination": "/home/pi/.aws/credentials"
    }, {
      "type": "file",
      "source": "{{user `home`}}/.ssh/id_rsa.pub",
      "destination": "/home/pi/.ssh/authorized_keys"
    }, {
      "type": "shell",
      "inline": [
        "sed '/PasswordAuthentication/d' -i /etc/ssh/sshd_config",
        "echo  >> /etc/ssh/sshd_config",
        "echo 'PasswordAuthentication no' >> /etc/ssh/sshd_config"
      ]
    }, {
      "type": "shell",
      "inline": [
        "aws s3 get s3://cropdroid/artifacts/cropdroid /usr/local/bin"
      ]
    }, {
      "type": "shell",
      "inline": [
        "aws s3 get s3://cropdroid/artifacts/cockroach /usr/local/bin"
      ]
    }
  ]
}