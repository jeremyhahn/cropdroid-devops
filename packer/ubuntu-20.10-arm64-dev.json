{
  "variables": {
    "home": "{{env `HOME`}}",
    "artifacts": "{{env `HOME`}}/sources/go-cropdroid/extra/dist/arm64",
    "cropdroid_binary_type": "standalone"
  },
  "builders": [{
    "name": "ubuntu-20.10-arm64-dev",
    "type": "arm-image",
    "image_type": "raspberrypi",
    "qemu_binary": "qemu-aarch64-static",
    "iso_url" : "https://cdimage.ubuntu.com/ubuntu/releases/20.10/release/ubuntu-20.10-preinstalled-desktop-arm64+raspi.img.xz",
    "iso_checksum":"2fa19fb53fe0144549ff722d9cd755d9c12fb508bb890926bfe7940c0b3555e8",
    "iso_checksum_type": "sha256",
    "target_image_size": 16000000000,
    "image_mounts": ["/boot/firmware","/"],
    "chroot_mounts": [
      ["proc", "proc", "/proc"],
      ["sysfs", "sysfs", "/sys"],
      ["bind", "/dev", "/dev"],
      ["devpts", "devpts", "/dev/pts"],
      ["binfmt_misc", "binfmt_misc", "/proc/sys/fs/binfmt_misc"]
    ]
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get install -y vim ssh git build-essential python3-pip",
        "pip install awscli"
      ]
    }, {
      "type": "shell",
      "script": "scripts/build-dev-ubuntu.sh"
    }
  ]
}
